<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Islamic Posts</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category-btn {
            margin: 5px;
            cursor: pointer;
        }
        .post-card img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .navbar-brand img {
            height: 40px; /* Adjust the logo size */
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #010e1c;">
    <div class="container">
        <a class="navbar-brand text-white" href="/">
            <img src="/images/mosque-logo.png" alt="Mosque Logo"> Islamic Posts
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                <% if (isAdmin) { %> 
                    <li class="nav-item"><a class="nav-link text-white" href="/admin/panel">Admin</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

    

    <div class="container mt-4">
        
        <!-- Category Filter Buttons -->
        <div class="text-center mb-4">
            <button class="btn btn-primary category-btn" data-category="All">All</button>
            <button class="btn btn-secondary category-btn" data-category="Quran">Quran</button>
            <button class="btn btn-success category-btn" data-category="Hadees">Hadees</button>
        </div>

        <!-- Posts Section -->
        <div class="row" id="posts-container">
            <% if (posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                    <div class="col-md-6 mb-4 post-card" data-category="<%= post.category %>">
                        <div class="card">
                            <% if (post.image) { %>
                                <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text">
                                    <%= post.content.length > 100 ? post.content.substring(0, 100) + "..." : post.content %>
                                </p>
                                <p><strong>Category:</strong> <%= post.category %></p>
                                <a href="/post/<%= post._id %>" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No posts available.</p>
            <% } %>
        </div>
    </div>

    <%- include("partials/footer") %>  

    <script src="/js/script.js"></script>
    <!-- Add Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
